<%- include("partials/header.ejs"); %>

<% if (locals.res) { %>
    <div class="container mt-5 text-center">
        <a href="/characters"><button class="btn btn-info btn-lg"> Hit Me!</button></a>
        <div class="character-card mx-1 my-4 py-4 rounded-3">
            <% const rnum = Math.floor(Math.random() * 20); %>
            <img src="<%= res.data[rnum].images.jpg.image_url %>" alt="character-img">
            <h3 class="mt-2"><%= res.data[rnum].name %></h3>
            <p>
                <% for(let i = 0; i < res.data[rnum].nicknames.length; i++) { %>
                    <%= res.data[rnum].nicknames[i] %>,
                <% } %> 
            </p>
            <p class="px-5"><%= res.data[rnum].about %></p>
        </div>
    </div>
<% } %>

<% if (locals.error) { %>
    <h1><%= error %></h1>
<% } %> 





